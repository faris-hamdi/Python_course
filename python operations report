# Addition
result = 5 + 3

# Subtraction
result = 10 - 4

# Multiplication
result = 6 * 7

# Division
result = 15 / 3

# Integer Division (floor division)
result = 16 // 5

# Modulus (remainder)
result = 17 % 3

# Exponentiation
result = 2 ** 4
# If statement
x = 10
if x > 5:
    print("x is greater than 5")

# If-else statement
y = 3
if y > 5:
    print("y is greater than 5")
else:
    print("y is not greater than 5")

# Ternary (Conditional) Operator
result = "Even" if x % 2 == 0 else "Odd"
